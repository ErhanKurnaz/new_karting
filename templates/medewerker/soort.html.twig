{% extends 'medewerker.html.twig' %}

{% block menu %}
    <li><a href="{{ path('activiteitenoverzicht') }}">home</a></li>
    <li><a href="{{ path('beheer') }}"><span class="badge">{{ aantal }}</span>beheer</a></li>
    <li class="active"><a href="{{ path('soort_index') }}">soorten</a></li>
{% endblock %}

{% block content %}
    <section >
        <table class="table" style="table-layout: fixed">
            <caption>Dit zijn alle activiteit soorten van het kartcentrum</caption>
            <thead>
            <tr>
                <td>Naam</td>
                <td>Beschrijving</td>
                <td>Prijs</td>
                <td>Tijdsduur</td>
                <td>Min leeftijd</td>
                <td>bewerken</td>
                <td>verwijderen</td>
            </tr>
            </thead>
            <tbody>
                {% for soort in soorten %}
                    <tr>
                        <td>{{ soort.naam }}</td>
                        <td>{{ soort.beschrijving == "" ? 'Geen.' : soort.beschrijving }}</td>
                        <td>{{ soort.prijs }}</td>
                        <td>{{ soort.tijdsduur }}</td>
                        <td>{{ soort.minLeeftijd }}</td>
                        <td title="bewerk de gegevens van deze activiteit">
                            <a href="{{ path('edit_soort', {'id':soort.id}) }}" >
                                <span class="glyphicon glyphicon-pencil" style="color:red"></span>
                            </a>
                        </td>
                        <td title="verwijder deze activiteit is definitief">
                            <a href="{{ path('delete_soort', {'id':soort.id}) }}" >
                                <span class="glyphicon glyphicon-minus" style="color:red"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="6">
                        <a href="{{ path('new_soort') }}">
                            <span class="glyphicon glyphicon-plus" style="color:red"></span>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>
{% endblock %}

